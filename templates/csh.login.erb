	switch (":${PATH}:")
	case "*:${p}:*":
		breaksw
	default:
		if ( $uid == 0 ) then
                        #set path = ( ${p} ${path:q} )
		else
                        #set path = ( ${path:q} ${p} )
		endif
		breaksw
	endsw
end

setenv HOSTNAME `<%= scope.lookupvar('etc_profile::path_hostname') %>`
set history=1000

if ( -d <%= scope.lookupvar('etc_profile::csh_basedir') %> ) then
        set nonomatch
        foreach i ( <%= scope.lookupvar('etc_profile::csh_basedir') %>/*.csh <%= scope.lookupvar('etc_profile::csh_basedir') %>/csh.local )
                if ( -r "$i" ) then
	                        if ($?prompt) then
	                              source "$i"
	                        else
	                              source "$i" >& /dev/null
	                        endif
                endif
        end
        unset i nonomatch
endif
